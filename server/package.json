{
	"name": "server",
	"version": "1.0.0",
	"main": "index.js",
	"license": "MIT",
	"scripts": {
		"start": "nodemon index.js",
		"testAll": "DB_ENV=testing jest --detectOpenHandles",
		"test-employees": "DB_ENV=testing jest 01_employees.test.js --detectOpenHandles",
		"test-locations": "DB_ENV=testing jest 02_locations.test.js --detectOpenHandles",
		"test-products": "DB_ENV=testing jest 03_products.test.js --detectOpenHandles",
		"test-employee_locations": "DB_ENV=testing jest 04_employee_locations.test.js --detectOpenHandles",
		"rollback-test-db": "knex migrate:rollback --env testing",
		"setup-test-db": "knex migrate:latest --env testing",
		"coverage": "CI=true npx jest --coverage --detectOpenHandles --forceExit",
		"migrate:make": "npx knex migrate:make",
		"migrate_latest": "npx knex migrate:rollback & npx knex migrate:latest",
		"migrate_rollback": "npx knex migrate:rollback",
		"seed_make": "knex seed:make"
	},
	"jest": {
		"testEnvironment": "node",
		"collectCoverageFrom": [
			"api/**/*.js",
			"!**/node_modules/**",
			"!**/vendor/**",
			"!**/__tests__/**",
			"!**/coverage/**",
			"!**/apidoc/**"
		]
	},
	"dependencies": {
		"cors": "^2.8.5",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"knex": "^2.4.2",
		"nodemon": "^2.0.22",
		"pg": "^8.11.1",
		"uuid": "^9.0.0"
	},
	"devDependencies": {
		"jest": "^29.5.0",
		"supertest": "^6.3.3"
	}
}
